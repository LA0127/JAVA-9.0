<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.Controller">
    <Label text="Primer número primo:"/>
    <TextField fx:id="prime1Field"/>
    <Label text="Segundo número primo:"/>
    <TextField fx:id="prime2Field"/>
    <Button text="Generar claves" onAction="#generateKeys"/>
    <Label fx:id="nLabel"/>
    <Label fx:id="phiLabel"/>
    <Label fx:id="eLabel"/>
    <Label fx:id="dLabel"/>
    <Label text="Mensaje:"/>
    <TextField fx:id="messageField"/>
    <Button text="Cifrar" onAction="#encrypt"/>
    <Label fx:id="encryptedMessageLabel"/>
    <Button text="Descifrar" onAction="#decrypt"/>
    <Label fx:id="decryptedMessageLabel"/>
</VBox>
